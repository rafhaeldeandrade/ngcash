{
  "name": "@monorepo/api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Rafhael Gomes",
  "license": "MIT",
  "scripts": {
    "start:dev": "tsnd --respawn -r tsconfig-paths/register src/main/server.ts",
    "migrate:postgresql:test": "dotenv -e .env.test -- npx prisma migrate dev --name postgres-init",
    "migrate:postgresql:dev": "dotenv -e .env.development -- npx prisma migrate dev --name postgres-init",
    "migrate:postgresql:prod": "dotenv -e .env.production -- npx prisma migrate dev --name postgres-init",
    "test": "jest --passWithNoTests --silent --noStackTrace",
    "test:unit": "npm test -- -c jest.config.unit --watch --maxWorkers=25%",
    "test:integration": "npm test -- -c jest.config.integration.ts --watch --maxWorkers=25%",
    "test:precommit": "npm test -- -c jest.config.ts --maxWorkers=25% --findRelatedTests",
    "test:prepush": "npm test -- -c jest.config.ts --coverage --maxWorkers=25%",
    "lint": "eslint --ext .ts src --fix"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "^29.3.1",
    "prettier": "2.5.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "argon2": "^0.30.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "prisma": "^4.6.1",
    "zod": "^3.19.1"
  }
}
